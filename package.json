{
  "name": "@ez-psycho/dashboard",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Losses Don <losses.don@gmail.com>",
  "license": "MIT",
  "scripts": {
    "nocui": "node -r esm main.js",
    "start": "node -r esm ./deploy/bundle.js",
    "debug": "node --inspect=9229 -r esm ./dashboard.js --debug",
    "dev:start": "node -r esm ./dashboard.js",
    "package": "webpack",
    "deploy": "webpack && pkg bundle.js --targets node10-win-x86 --output ./deploy/ezTrigger-srv"
  },
  "dependencies": {
    "@ez-trigger/core": "https://github.com/ezPsycho/ezTrigger-core.git",
    "@ez-trigger/server": "https://github.com/ezPsycho/ezTrigger-server.git",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.8.5",
    "colors": "^1.3.1",
    "esm": "^3.0.84",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "is-callable": "^1.1.4",
    "mri": "^1.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "node-resourcehacker": "^1.2.1",
    "pkg": "^4.3.1",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "deployFixWhitelist": [
    "@ez-trigger/server",
    "@ez-trigger/core"
  ],
  "packageIntoBundle": [
    "glob",
    "is-callable",
    "mri",
    "uuid",
    "blessed-contrib"
  ]
}
